<div class="container col-lg-5 text-center card bg-secondary mt-5">
  <h2 class="mt-3 text-primary bg-light w-50 mx-auto">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <p class="text-white mb-0 mt-1">Email</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",size: "40x10" %>
  </div>

  <div class="field">
    <p class="text-white mb-0 mt-1">パスワード</p>
    <%= f.password_field :password,size: "40x10", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <p class="text-white mb-0 mt-1"><%= f.check_box :remember_me %>ログイン状態を保つ</p>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" ,class:"btn btn-primary mt-3 mb-2" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
